<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".TelaResultadoCirActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="268dp"
            android:contentDescription="@string/img_circulo"
            app:srcCompat="@mipmap/circulo_foreground" />

        <TextView
            android:id="@+id/lblRaioCirculoE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/lbl_resultado_operacao_circulo"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lblResultOperaCirculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <View
            android:id="@+id/espaco4"
            android:layout_width="match_parent"
            android:layout_height="75dp" />

        <Button
            android:id="@+id/btnFazerOutraOpera4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnFazerOutraOpera4"
            android:text="@string/btn_fazer_outra_operacao" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>